<Window x:Class="ImageSpliter.View.MainWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageSpliter.View"
        mc:Ignorable="d"
        Title="MainWindow2" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#F0F0F0">
            <ComboBox SelectedIndex="0" Width="220" Height="40" FontSize="16" VerticalContentAlignment="Center" SelectionChanged="ComboBox_SelectionChanged">
                <ComboBoxItem Content="Grid Mode" />
                <ComboBoxItem Content="WhiteSpaceRemove Mode" />
                <ComboBoxItem Content="Crop Mode" />
            </ComboBox>
        </StackPanel>

        <Frame Name="myFrame" Grid.Column="1" Source="pack://application:,,,/View/GridPage.xaml"></Frame>
    </Grid>
</Window>
